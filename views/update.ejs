<html>
    <%- include ('./partials/head.ejs') %>
    <%- include ('./partials/navbar.ejs') %>

    <div class="breadcrumbs_area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb_content">
                        <ul>
                            <li>
                                <h1><a href="/">Home</a></h1>
                            </li>
                            <li>Update Product</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="login-area mt-25">
        <div class="container">
            <div class="row">
                <div class="offset-lg-3 col-lg-6">
                    <div class="checkout_info mb-20">
                        <form class="form-row" action="/updateproduct/<%= product._id%>?_method=PUT" method="POST">
                            <h1 class="last-title mb-30 text-center">Update Product</h1>
                            <div class="form_group col-12">
                                <label class="form-label">Product Name: <span>*</span></label>
                                <input class="input-form" value="<%= product.name%>" required name="name" type="text">
                            </div>

                            <div class="form_group col-12">
                                <label class="form-label">Product Price: <span>*</span></label>
                                <input class="input-form" required value="<%= product.price%>" name="price" type="text">
                            </div>

                            <div class="form_group col-12">
                                <label class="form-label">Product Description: <span>*</span></label>
                                <textarea name="description" required id="" style="width: 100%;" rows="10"><%= product.description%></textarea>
                            </div>

                            <!-- <div class="form_group col-12">
                                <label class="form-label">Product Image: <span>*</span></label>
                                <input class="input-form" required name="image" type="file">
                            </div> -->


                            
                            <div class="form_group group_4 col-lg-6">
                                <button class="login-register" type="submit">Submit</button>
                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

